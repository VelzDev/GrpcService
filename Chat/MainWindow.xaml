<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Chat" Height="489" Width="520">
    <Grid Margin="0,0,0,-76">
        <TextBox x:Name="UsernameInput" Height="30" VerticalAlignment="Top" Margin="10" />
        <TextBox x:Name="MessageInput" Height="58" VerticalAlignment="Top" Margin="10,348,10,0" AcceptsReturn="True" TextWrapping="Wrap" />
        <Button Content="Send" Height="30" VerticalAlignment="Top" Margin="10,431,10,0" Click="SendButton_Click"/>

        <TextBox x:Name="ChatHistory" IsReadOnly="True" VerticalAlignment="Top" Height="300" Margin="10,40,10,0" AcceptsReturn="True" TextWrapping="Wrap"/>
    </Grid>
</Window>
